{
  "name": "envoyage",
  "type": "module",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run lint && npm run test:vitest && npm run test:tstyche",
